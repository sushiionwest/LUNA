# Luna Testing Infrastructure - Production Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=luna_secure_password_2024!
DATABASE_URL=postgresql://luna:luna_secure_password_2024!@postgres:5432/luna_testing

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_2024!
REDIS_URL=redis://default:redis_secure_password_2024!@redis:6379

# Email Service Configuration (choose one)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=luna-testing@yourdomain.com

# Alternative: Gmail SMTP
# EMAIL_SERVICE=gmail
# EMAIL_USER=luna.testing@yourdomain.com
# EMAIL_PASS=your_gmail_app_password

# Alternative: Mailgun
# EMAIL_SERVICE=mailgun
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=yourdomain.com

# Security
JWT_SECRET=luna_jwt_super_secret_key_2024_change_this!
SESSION_SECRET=luna_session_secret_2024_change_this!

# CORS Configuration
CORS_ORIGIN=https://luna-testing.yourdomain.com,https://www.luna-testing.yourdomain.com

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
UPLOAD_MAX_SIZE=50MB

# Monitoring
GRAFANA_PASSWORD=grafana_admin_password_2024!

# File Storage (MinIO/S3)
MINIO_ACCESS_KEY=luna_minio_access_key
MINIO_SECRET_KEY=luna_minio_secret_key_2024!
S3_BUCKET=luna-testing-uploads
S3_REGION=us-east-1

# Domain Configuration
DOMAIN_NAME=luna-testing.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
REGISTRATION_RATE_LIMIT=5

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Webhook URLs
SLACK_WEBHOOK_URL=your_slack_webhook_for_notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_for_notifications

# VM Configuration
VM_MAX_INSTANCES=50
VM_DEFAULT_MEMORY=2GB
VM_DEFAULT_CPU=2
VM_CLEANUP_INTERVAL=300000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=luna-testing-backups

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOADS=true
ENABLE_WEBHOOKS=true

# Development/Testing overrides (set to false in production)
SKIP_EMAIL_VERIFICATION=false
ENABLE_DEBUG_LOGGING=false
MOCK_VM_OPERATIONS=false