{
  "name": "luna-agent-tests",
  "version": "1.0.0",
  "description": "Luna Agent Testing Suite",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest unit/",
    "test:integration": "jest integration/",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "k6 run performance/load-test.js",
    "test:installer": "bash ./installer-test.sh",
    "test:vm": "bash ./vm-test.sh",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "k6": "^0.47.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "child_process": "^1.0.2",
    "fs-extra": "^11.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": ["luna", "agent", "testing", "automation", "vm"],
  "author": "Luna Team",
  "license": "MIT"
}